{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<h1 class="col-md-4 col-md-offset-4 text-center">Log in</h1>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<form method="POST" action="{{ path('login') }}" role="form" class="col-md-4 col-md-offset-4">
				<div class="form-group">
					<label for="username">Login</label>
					<input type="text" name="_username" id="username" class="form-control"
						   required maxlength="225" value="{{ last_username }}">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="_password" id="password" class="form-control"
						   required maxlength="225">
				</div>			
				<div class="form-group">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>

				{% if error %}
					<div class="form-group has-error">
						<div class="alert alert-danger">
							{{ error.messageKey }}
						</div>
					</div>
				{% endif %}

				<div class="form-group">
					<button type="submit" class="btn btn-info col-md-6 col-md-offset-6">Sign up</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
